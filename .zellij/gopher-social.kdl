layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="compact-bar"
        }
    }
    tab name="nvim" split_direction="vertical" {
        pane command="nvim"
    }
    tab name="shell" split_direction="vertical" {
        pane command="fish"
    }
    tab name="llm" split_direction="vertical" {
        pane command="fish"
    }
    tab name="node" split_direction="vertical" {
        pane {
            cwd "./web"
            command "npm"
            args "run" "dev"
        }
    }
    tab name="air" split_direction="vertical" {
        pane command="air"
    }
    tab name="posting" split_direction="vertical" {
        pane {
			command "posting"
			args "--collection" "./posting"
		}
    }
    tab name="rainfrog" split_direction="vertical" {
        pane command="rainfrog"
    }
    tab name="podman-compose" split_direction="vertical" {
        pane {
            command "podman-compose"
            args "up"
        }
    }
}
